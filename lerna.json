{
  "packages": [
    "packages/@custom-ui/*",
    "packages/@custom-ui-docs",
    "packages/build-utils"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock", "--no-ci"]
    },
    "version": {
      "allowBranch": ["master"],
      "amend": false,
      "conventionalCommits": true
    },
    "publish": {
      "verifyAccess": false,
      "registry": "https://registry.npmmirror.com"
    }
  }
}
