{
  "packages": [
    "packages/**"
  ],
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock", "--no-ci"]
    },
    "version": {
      "allowBranch": ["master", "func-add-v-contextmenu-transform"],
      "amend": false,
      "conventionalCommits": true
    },
    "publish": {
      "verifyAccess": false,
      "registry": "https://registry.npmjs.org"
    }
  }
}
